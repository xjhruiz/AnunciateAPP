<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="vertical"
    tools:context="com.example.jhonatan.anunciate.DetallesAnuncios">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/toolbar2"
            layout="@layout/toolbar2" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/fotoanuncio" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Funcion laboral"
        android:textSize="20sp"

        android:gravity="start"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorfecha"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Funcion laboral"
        android:textSize="20sp"
        android:gravity="start"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorLetras"
        android:id="@+id/textView10"
         />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="start"
        android:text="Detalles"
        android:textColor="@color/colorfecha"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="start"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorLetras"
        android:textSize="15sp"
        android:text="Detalles"
        android:id="@+id/textView11"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dirreccion"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorfecha"
        android:textSize="14sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dirreccion"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorLetras"
        android:textSize="14sp"
        android:id="@+id/textView12"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Ciudad"
        android:textColor="@color/colorfecha"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Ciudad"
        android:textColor="@color/colorLetras"
        android:id="@+id/textView14"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jornada"
        android:textColor="@color/colorfecha"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles"
        android:textColor="@color/colorLetras"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"

        android:id="@+id/textView13"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"

            android:text="Pago"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:id="@+id/textView15"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fecha"
            android:gravity="left"
            android:textStyle="italic"
            android:textColor="@color/colorLetrasTitulos"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:id="@+id/textView17" />
    </LinearLayout>
    <Button
        android:id="@+id/btnVerPerfil"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:textColorHint="@color/colorLetras"
        android:theme="@style/Boton" />

    <Button
        android:id="@+id/btninscribirse"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Inscribirse "
        android:textColorHint="@color/colorLetras"
        android:theme="@style/Boton" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/cancelar"
        android:textColorHint="@color/colorLetras"
        android:theme="@style/Boton" />


</LinearLayout>
