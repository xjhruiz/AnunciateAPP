<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context="com.example.jhonatan.anunciate.DetallesMisAnuncios">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/toolbar2"
            layout="@layout/toolbar2" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/fotoanuncio"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Funcion laboral"
            android:textSize="20sp"
            android:gravity="start"
            android:background="@color/colorfecha"
            android:textColor="@color/letraperfil"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="28dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Funcion laboral"
            android:textSize="20sp"
            android:gravity="start"
            android:textColor="@color/colorLetras"
            android:id="@+id/miaFuncion"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="28dp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Detalles"
            android:background="@color/colorfecha"
            android:textColor="@color/letraperfil"
            android:textSize="15sp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="28dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="start"
            android:textColor="@color/colorLetras"
            android:textSize="15sp"
            android:text="Detalles"
            android:id="@+id/miaDetalles"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="28dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirreccion"
            android:background="@color/colorfecha"
            android:textColor="@color/letraperfil"
            android:textSize="14sp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="28dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirreccion"
            android:textColor="@color/colorLetras"
            android:textSize="14sp"
            android:id="@+id/miaDireccion"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="28dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciudad"
            android:background="@color/colorfecha"
            android:textColor="@color/letraperfil"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="28dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciudad"
            android:textColor="@color/colorLetras"
            android:id="@+id/miaCiudad"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="28dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jornada"
            android:background="@color/colorfecha"
            android:textColor="@color/letraperfil"
            android:textSize="15sp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="28dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles"
            android:textColor="@color/colorLetras"
            android:textSize="15sp"
            android:id="@+id/miaJornada"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Pago"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:id="@+id/miaPago"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fecha"
            android:gravity="left"
            android:textStyle="italic"
            android:textColor="@color/colorLetrasTitulos"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:id="@+id/miaFecha" />
    </LinearLayout>

    <EditText
        android:id="@+id/usernameRealizado"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/realizadoUsuario"
        android:gravity="center"
        android:textColorHint="@color/colorLetrasTitulos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnOpinar"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/tarea_realizada"
        android:textColorHint="@color/colorLetras"
        android:theme="@style/Boton"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />
</LinearLayout>
